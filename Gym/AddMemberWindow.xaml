<Window x:Class="Gym.AddMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym"
        mc:Ignorable="d"
        Title="AddMember" Height="490" Width="800">
    <Border Padding="20" Background="#FAFAFA" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Full Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="0,5" Padding="5" />

            <Label Content="Gender:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbGender" Grid.Row="1" Grid.Column="1" Margin="0,5" Padding="5">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
            </ComboBox>

            <Label Content="Date of Birth:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpDateOfBirth" Grid.Row="2" Grid.Column="1" Margin="0,5" Padding="5"/>

            <Label Content="Phone Number:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="1" Margin="0,5" Padding="5"/>
            
            <Label Content="Email:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="1" Margin="0,5" Padding="5"/>

            <Label Content="Join Date:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpJoinDate" Grid.Row="5" Grid.Column="1" Margin="0,5" Padding="5"/>

            <Label Content="Membership Package:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbMembership" Grid.Row="6" Grid.Column="1" Margin="0,5" Padding="5"
                      DisplayMemberPath="PackageName" SelectedValuePath="PackageId"/>

            <Label Content="PT Package:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbPT" Grid.Row="7" Grid.Column="1" Margin="0,5" Padding="5"
                      DisplayMemberPath="Ptname" SelectedValuePath="PtpackageId"/>

            <Button Content="➕ Add" Grid.Row="9" Grid.Column="1"
                    HorizontalAlignment="Right" Margin="0,20,0,0" Padding="8,4"
                    Width="100" Click="Add_Click"
                    Background="#0078D7" Foreground="White" BorderBrush="#005A9E"/>
        </Grid>
    </Border>
</Window>
